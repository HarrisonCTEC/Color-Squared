<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/solBase3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="@string/app_name_fancy"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/solBase03"
        android:textSize="48sp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/solRed"
        android:padding="10dp"
        android:text="Start"
        android:textColorHint="@color/solBase03"
        android:textSize="25sp" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@color/solBlue"
        android:padding="10dp"
        android:text="About"
        android:textColor="@color/solBase03"
        android:textSize="25sp" />

</RelativeLayout>
